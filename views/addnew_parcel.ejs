<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <title>Add new parcel</title>
    <link rel="stylesheet" href="assets/pages.css">
    <link rel="stylesheet" href="assets/form.css">
</head>
<body>
    <h1> Add new parcel </h1>
    <div class="sidenav">
        <a href="/home">Dashboard</a>
        <button class="dropdown-btn">Branch 
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="/addnew_branch">Add new</a>
            <a href="/list_branches">List</a>
        </div>
        <button class="dropdown-btn">Branch Staff 
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="/addnew_branchstaff">Add new</a>
            <a href="/list_branchstaff">List</a>
        </div>
        <button class="dropdown-btn">Parcels 
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="/addnew_parcel">Add new</a>
            <a href="/list_parcels">List all</a>
        </div>
    </div>

    <form action="/addnew_parcel" method="post">

        <label for="senderName">Sender's Name:</label>
        <input type="text" id="senderName" name="senderName" required>
        
        <label for="senderAddress">Sender's Address:</label>
        <input type="text" id="senderAddress" name="senderAddress" required>
        
        <label for="receiverName">Receiver's Name:</label>
        <input type="text" id="receiverName" name="receiverName" required>
        
        <label for="receiverAddress">Receiver's Address:</label>
        <input type="text" id="receiverAddress" name="receiverAddress" required>
        
        <label for="parcelCost">Cost:</label>
        <input type="text" id="parcelCost" name="parcelCost" required>
        
        <label for="parcelWeight">Weight:</label>
        <input type="text" id="parcelWeight" name="parcelWeight" required>

        <label for="parcelLength">Length:</label>
        <input type="text" id="parcelLength" name="parcelLength">
        
        <label for="parcelWidth">Width:</label>
        <input type="text" id="parcelWidth" name="parcelWidth">
        
        <label for="parcelType">Type:</label>
        <input type="text" id="parcelType" name="parcelType">
        
        <label for="parcelHeight">Height:</label>
        <input type="text" id="parcelHeight" name="parcelHeight">
        
        <button type="submit">Submit</button>
    </form>
    
</body>
<script>
    var dropdown = document.getElementsByClassName("dropdown-btn");
    for (var i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var dropdownContent = this.nextElementSibling;
            if (dropdownContent.style.display === "block") {
                dropdownContent.style.display = "none";
            } else {
                dropdownContent.style.display = "block";
            }
        });
    }    
</script>
</html>