<!DOCTYPE html>
<html>
<head>
    <title>Customer Home</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #0074d9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Parcel Tracking Information</h1>
        <table>
            <tr>
                <th>Parcel ID</th>
                <th>Type</th>
                <th>Recipient Name</th>
                <th>Date Accepted</th>
                <th>Cost</th>
                <th>Status</th>
            </tr>
            <% parcelsData.forEach(function(parcel) { %>
                <tr>
                    <td><%= parcel.parcel_id %></td>
                    <td><%= parcel.type %></td>
                    <td><%= parcel.recv_name %></td>
                    <td><%= parcel.date_accepted %></td>
                    <td><%= parcel.cost %></td>
                    <td><%= parcel.status %></td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>

